{
	"name": "node-modules-size",
	"version": "0.0.9",
	"description": "cli to show node_modules size",
	"license": "MIT",
	"main": "dist/node-modules-size.js",
	"module": "dist/node-modules-size.m.js",
	"repository": "chinanf-boy/node-modules-size",
	"author": {
		"name": "chinanf-boy",
		"email": "865501259@qq.com",
		"url": "http://llever.com"
	},
	"bin": "cli.js",
	"engines": {
		"node": ">=4"
	},
	"scripts": {
		"test": "nyc ava -v",
		"dev": "microbundle watch",
		"precommit": "lint-staged",
		"prepublish": "npm run build",
		"build": "microbundle",
		"pub": "npm run test && npm run npmUp && npm run git",
		"npmUp": "npm version patch && npm publish",
		"git": "git push && git push --tags"
	},
	"size-limit": [
		{
			"path": "dist/node-modules-size.js",
			"gzip": false,
			"webpack": false
		}
	],
	"lint-staged": {
		"*.{js,json,css,md}": [
			"prettier --single-quote --trailing-comma es5 --write",
			"git add"
		]
	},
	"files": [
		"cli.js"
	],
	"keywords": [
		"cli-app",
		"cli",
		"node-modules",
		"size"
	],
	"dependencies": {
		"bluebird": "^3.5.1",
		"execa": "^0.10.0",
		"find-files-rust": "^2.1.0",
		"get-module-name": "0.0.1",
		"meow": "^5.0.0",
		"pretty-bytes": "^5.0.0",
		"two-log": "0.0.9",
		"what-time": "0.0.1",
		"yobrave-util": "0.0.3"
	},
	"devDependencies": {
		"codecov": "^3.0.2",
		"nyc": "^11.8.0",
		"lint-staged": "^7.0.0",
		"microbundle": "^0.4.4",
		"prettier": "^1.12.1",
		"ava": "^0.25.0"
	},
	"nyc": {
		"reporter": [
			"lcov",
			"text"
		]
	}
}
